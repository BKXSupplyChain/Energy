import requests
import json
import time

def tester(s, Jou):
    add = Jou
    cntJo = 0
    identification = s[:16]
    URL = s[16:]
    while (True):
        payload = {'ID': identification, 'CntOfJoules': cntJo}
        #print(payload)
        r = requests.post(URL, data = json.dumps(payload))
        cntJo = cntJo + add
        time.sleep(120)

print('ID and address:')
addr = input()
print('How much Joules should we add every 2 minutes:')
Joul = int(input())
tester(addr, Joul)
